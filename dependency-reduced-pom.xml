<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.example</groupId>
  <artifactId>untitled</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>teacher-jar</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>teacher</classifier>
              <archive>
                <manifest>
                  <mainClass>com.exam.TeacherApplication</mainClass>
                  <addClasspath>true</addClasspath>
                  <classpathPrefix>lib/</classpathPrefix>
                </manifest>
              </archive>
            </configuration>
          </execution>
          <execution>
            <id>student-jar</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>student</classifier>
              <archive>
                <manifest>
                  <mainClass>com.exam.StudentApplication</mainClass>
                  <addClasspath>true</addClasspath>
                  <classpathPrefix>lib/</classpathPrefix>
                </manifest>
              </archive>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <id>teacher-jar-with-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <archive>
                <manifest>
                  <mainClass>com.exam.TeacherApplication</mainClass>
                </manifest>
              </archive>
              <descriptorRefs>
                <descriptorRef>jar-with-dependencies</descriptorRef>
              </descriptorRefs>
              <finalName>exam-teacher</finalName>
              <appendAssemblyId>false</appendAssemblyId>
            </configuration>
          </execution>
          <execution>
            <id>student-jar-with-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <archive>
                <manifest>
                  <mainClass>com.exam.StudentApplication</mainClass>
                </manifest>
              </archive>
              <descriptorRefs>
                <descriptorRef>jar-with-dependencies</descriptorRef>
              </descriptorRefs>
              <finalName>exam-student</finalName>
              <appendAssemblyId>false</appendAssemblyId>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.3.1</version>
        <configuration>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.akathist.maven.plugins.launch4j</groupId>
        <artifactId>launch4j-maven-plugin</artifactId>
        <version>2.5.0</version>
        <executions>
          <execution>
            <id>student-exe</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <configuration>
              <outfile>${project.build.directory}/在线考试系统-学生端.exe</outfile>
              <jar>${project.build.directory}/exam-student.jar</jar>
              <icon>${project.basedir}/src/main/resources/pic/logo.ico</icon>
              <headerType>gui</headerType>
              <dontWrapJar>false</dontWrapJar>
              <jre>
                <minVersion>17.0.0</minVersion>
                <path>jre</path>
                <opts>
                  <opt>-Dfile.encoding=UTF-8</opt>
                </opts>
              </jre>
              <versionInfo>
                <fileVersion>1.0.0.0</fileVersion>
                <txtFileVersion>1.0.0</txtFileVersion>
                <fileDescription>在线考试系统 - 学生端</fileDescription>
                <copyright>Copyright © 2026</copyright>
                <productVersion>1.0.0.0</productVersion>
                <txtProductVersion>1.0.0</txtProductVersion>
                <productName>在线考试系统</productName>
                <internalName>ExamStudent</internalName>
                <originalFilename>在线考试系统-学生端.exe</originalFilename>
              </versionInfo>
            </configuration>
          </execution>
          <execution>
            <id>teacher-exe</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <configuration>
              <outfile>${project.build.directory}/在线考试系统-教师端.exe</outfile>
              <jar>${project.build.directory}/exam-teacher.jar</jar>
              <icon>${project.basedir}/src/main/resources/pic/logo.ico</icon>
              <headerType>gui</headerType>
              <dontWrapJar>false</dontWrapJar>
              <jre>
                <minVersion>17.0.0</minVersion>
                <path>jre</path>
                <opts>
                  <opt>-Dfile.encoding=UTF-8</opt>
                </opts>
              </jre>
              <versionInfo>
                <fileVersion>1.0.0.0</fileVersion>
                <txtFileVersion>1.0.0</txtFileVersion>
                <fileDescription>在线考试系统 - 教师端</fileDescription>
                <copyright>Copyright © 2026</copyright>
                <productVersion>1.0.0.0</productVersion>
                <txtProductVersion>1.0.0</txtProductVersion>
                <productName>在线考试系统</productName>
                <internalName>ExamTeacher</internalName>
                <originalFilename>在线考试系统-教师端.exe</originalFilename>
              </versionInfo>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <id>server-headless</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>server</shadedClassifierName>
              <transformers>
                <transformer>
                  <mainClass>com.exam.TeacherServerHeadless</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <finalName>exam-server-headless</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>mac</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.panteleyev</groupId>
            <artifactId>jpackage-maven-plugin</artifactId>
            <version>1.6.0</version>
            <executions>
              <execution>
                <id>student-mac</id>
                <phase>package</phase>
                <goals>
                  <goal>jpackage</goal>
                </goals>
                <configuration>
                  <name>在线考试系统-学生端</name>
                  <appVersion>1.0.0</appVersion>
                  <vendor>Exam System</vendor>
                  <destination>${project.build.directory}/mac</destination>
                  <input>${project.build.directory}</input>
                  <mainJar>exam-student.jar</mainJar>
                  <mainClass>com.exam.StudentApplication</mainClass>
                  <javaOptions>
                    <option>-Dfile.encoding=UTF-8</option>
                    <option>-Dapple.awt.application.appearance=system</option>
                  </javaOptions>
                  <type>APP_IMAGE</type>
                  <macPackageIdentifier>com.exam.student</macPackageIdentifier>
                  <macPackageName>考试系统学生端</macPackageName>
                </configuration>
              </execution>
              <execution>
                <id>teacher-mac</id>
                <phase>package</phase>
                <goals>
                  <goal>jpackage</goal>
                </goals>
                <configuration>
                  <name>在线考试系统-教师端</name>
                  <appVersion>1.0.0</appVersion>
                  <vendor>Exam System</vendor>
                  <destination>${project.build.directory}/mac</destination>
                  <input>${project.build.directory}</input>
                  <mainJar>exam-teacher.jar</mainJar>
                  <mainClass>com.exam.TeacherApplication</mainClass>
                  <javaOptions>
                    <option>-Dfile.encoding=UTF-8</option>
                    <option>-Dapple.awt.application.appearance=system</option>
                  </javaOptions>
                  <type>APP_IMAGE</type>
                  <macPackageIdentifier>com.exam.teacher</macPackageIdentifier>
                  <macPackageName>考试系统教师端</macPackageName>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>mac-dmg</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.panteleyev</groupId>
            <artifactId>jpackage-maven-plugin</artifactId>
            <version>1.6.0</version>
            <executions>
              <execution>
                <id>student-dmg</id>
                <phase>package</phase>
                <goals>
                  <goal>jpackage</goal>
                </goals>
                <configuration>
                  <name>在线考试系统-学生端</name>
                  <appVersion>1.0.0</appVersion>
                  <vendor>Exam System</vendor>
                  <destination>${project.build.directory}/mac-dmg</destination>
                  <input>${project.build.directory}</input>
                  <mainJar>exam-student.jar</mainJar>
                  <mainClass>com.exam.StudentApplication</mainClass>
                  <javaOptions>
                    <option>-Dfile.encoding=UTF-8</option>
                  </javaOptions>
                  <type>DMG</type>
                  <macPackageIdentifier>com.exam.student</macPackageIdentifier>
                  <macPackageName>考试系统学生端</macPackageName>
                </configuration>
              </execution>
              <execution>
                <id>teacher-dmg</id>
                <phase>package</phase>
                <goals>
                  <goal>jpackage</goal>
                </goals>
                <configuration>
                  <name>在线考试系统-教师端</name>
                  <appVersion>1.0.0</appVersion>
                  <vendor>Exam System</vendor>
                  <destination>${project.build.directory}/mac-dmg</destination>
                  <input>${project.build.directory}</input>
                  <mainJar>exam-teacher.jar</mainJar>
                  <mainClass>com.exam.TeacherApplication</mainClass>
                  <javaOptions>
                    <option>-Dfile.encoding=UTF-8</option>
                  </javaOptions>
                  <type>DMG</type>
                  <macPackageIdentifier>com.exam.teacher</macPackageIdentifier>
                  <macPackageName>考试系统教师端</macPackageName>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>8.0.33</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
